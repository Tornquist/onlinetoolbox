<p id="notice"><%= notice %></p>

<h1>Listing Student Ribbons</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Ribbon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_ribbons.each do |student_ribbon| %>
      <tr>
        <td><%= student_ribbon.student_id %></td>
        <td><%= student_ribbon.ribbon_id %></td>
        <td><%= link_to 'Show', student_ribbon %></td>
        <td><%= link_to 'Edit', edit_student_ribbon_path(student_ribbon) %></td>
        <td><%= link_to 'Destroy', student_ribbon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

