%div.row
  %div.col-sm-12
    %div.panel.panel-primary
      %div.panel-heading
        %div.panel-title
          Student Profile
          - if @show_buttons
            %span.pull-right
              = f.submit class: "btn btn-success btn-xs"
      %div.panel-body
        %div.row
          %div.col-sm-3
            = f.label :first_name
            %br
            = f.text_field :first_name, class: "form-control"
          %div.col-sm-3
            = f.label :last_name
            %br
            = f.text_field :last_name, class: "form-control"
          %div.col-sm-3
            = f.label :email
            %br
            = f.text_field :email, class: "form-control"
          %div.col-sm-3
            = f.label :recruit
            %br
            = f.check_box :recruit
            (Check for Incoming Students)
