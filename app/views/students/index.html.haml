%h1
  Listing students

%table
  %thead
    %tr
      %th
        First name
      %th
        Last name
      %th
        Email
      %th
        Recruit
  %tbody
    - @students.each do |student|
      %tr
        %td
          = student.first_name
        %td
          = student.last_name
        %td
          = student.email
        %td
          = student.recruit
        %td
          = link_to 'Show', student
        %td
          = link_to 'Edit', edit_student_path(student)
        %td
          = link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }
        %td
          = link_to 'Comment', new_comment_path(student_id: student.id)
%br

= link_to 'New Student', new_student_path, class: "btn btn-success"
